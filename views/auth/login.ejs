<% layout('layouts/boilerplate') %>
<%-include('../partials/flash') %>




 
 <div class='row g-3'>
    <!-- <h1 class="display-6">Signup Page</h1> -->
    <form action="/login"  method="post" class="col-6 mx-auto row g-3">
        <h1  class="display-6">Login Page</h1>
        <div class="col-md-6">
            <label for="inputAddress" class="form-label">Username</label>
            <input type="text" class="form-control" name="username" id="inputAddress" placeholder="Username">
        </div>

        <div class="col-md-6">
          <label for="inputPassword4" class="form-label">Password</label>
          <input type="password" name="password" class="form-control" id="inputPassword4" placeholder="Enter Password">
        </div>
        
        
        <div class="col-12">
          <button type="submit" class="btn btn-success">Login</button>
        </div>
        <p class="fw-light mt-2">Don't have an account ,<a href="/register">Signup</a></p>
      </form>

    
  
 </div>
