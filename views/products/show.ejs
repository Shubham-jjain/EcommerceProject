<% layout('layouts/boilerplate') %>
<%-include('../partials/navbar.ejs') %>
<%-include('../partials/flash.ejs') %>
 
 <div  class='row mx-auto'>
 
 
    
      <div class="col-lg-6 mt-3">
             <div class="shadow card mx-auto" style="width: 25rem;">
                  <img src= "<%=foundproduct.img%>" class="card-img-top" alt="...">
                   <div class="card-body">
                      <h2 class="card-title"><%=foundproduct.name%></h2>
                       <h5 class="card-title"><%=foundproduct.price%></h5>
                        <p class="card-text"><%=foundproduct.desc%></p>
                        <%if(currentUser && currentUser.role=== 'seller'){%>
                        <a href="/products/<%=foundproduct.id%>/edit" class="btn btn-danger">Edit</a>
                   <%}%>
                   <form action="/user/<%=foundproduct.id%>/add" class="display-inline-block" method="POST">
                    <button href="" class="btn btn-info">Add To Cart</button>
                   </form>
                        
                        <a href="#" class="btn btn-primary">Buy the product</a>

                    </div>     
               </div> 
      </div>  
      <div class="col-lg-6">
    <h1 class="display-5">Leave a Reviews</h1>
    <form action="/products/<%=foundproduct.id%>/review" method="POST">
        <div>
            <fieldset class="starability-basic">
                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="rating" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="rating" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="rating" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="rating" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="rating" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
  
        </div>
        <div class="mb-3">
            <label class="form-label" for="comment">Enter Comment:</label>
            <textarea class="form-control" name="comment" id="comment" cols="50" rows="10"></textarea>
        </div>
        <button class="btn btn-success">Add Review</button>
    </form>

    <div class="my-3">

       <% for(let review of foundproduct.reviews){ %>
            <div class="card">
                <!-- <div class="card-header">Rating:<%=review.rating%></div> -->
                <p class="card-title mx-2">
                <%if(review.createdAt){%>
                    <%=review.createdAt.toDateString()%>

                <%}%>
            </p>
                <p class="starability-result" data-rating="<%=review.rating%>">
                  Rated:<%=review.rating%> Stars
                </p>
                <div class="card-body">
                  <h5 class="card-title">Comment:<%=review.comment%></h5>
                  <!-- <p class="card-text"><%=review.comment%></p> -->
                  
                  <a href="#" class="btn btn-danger">Delete</a>
                </div>
               
              </div>
        <%}%>

    </div>
      </div>
 </div>
 
